{
  "extends": [
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:react/recommended",
    "plugin:jsx-a11y/recommended",
    "prettier",
    "prettier/react"
  ],
  "parser": "babel-eslint",
  "plugins": [
    "react",
    "babel",
    "import",
    "jsx-a11y",
    "react-hooks",
    "prettier"
  ],

  "rules": {
    "prettier/prettier": ["error"],
    "class-methods-use-this": "off",
    "react/destructuring-assignment": "off",
    "comma-dangle": ["error", "never"],
    "linebreak-style": ["warn", "windows"],
    "react/jsx-filename-extension": "off",
    "react/jsx-one-expression-per-line": "off",
    "radix": "off",
    "func-names": "off",
    "react/prop-types": 0,
    "react-hooks/rules-of-hooks": "error",
    "no-console": "warn"
  },
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true
  },
  "globals": {},
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
